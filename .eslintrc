{
  "extends": "airbnb/base",
  "env": {
    "mocha": true,
  },
  "rules": {
    "comma-dangle": 0,
    "prefer-arrow-callback": 0,
    "max-len": 0,
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "padded-blocks": 0,
    "prefer-rest-params": 0,
    "prefer-template": 0,
    "strict": 0,
    "no-underscore-dangle": 0,
    "indent": off,
    "prefer-const": warn,
    "no-param-reassign": warn,
    "global-require": warn,
    "quote-props": warn,
    "object-curly-spacing": off,
    "no-console": warn,
    "semi": warn,
    "spaced-comment": warn,
    "quotes": warn,
  },
  "globals": {
    "appRequire": true
  }
}
